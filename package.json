{
	"name": "restful-api-express-boilerplate",
	"version": "0.0.1",
	"description": "Boilerplate for building RESTful APIs using Express",
	"main": "src/index.js",
	"license": "MIT",
	"author": "Jaime Alan Guti√©rrez Cruz <jgutierrezcruz367@gmail.com>",
	"private": true,
	"engines": {
		"node": ">=14.17.5"
	},
	"keywords": [
		"node",
		"node.js",
		"boilerplate",
		"express",
		"REST",
		"API",
		"jest",
		"passport",
		"joi",
		"eslint",
		"prettier",
		"starter project"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/jagcruz/restful-api-express-boilerplate.git"
	},
	"scripts": {
		"start": "pm2 start ecosystem.config.json --no-daemon",
		"start:node": "cross-env NODE_ENV=production node src/index.js",
		"dev": "cross-env NODE_ENV=development nodemon src/index.js",
		"test": "jest -i --colors --verbose --detectOpenHandles",
		"test:watch": "jest -i --watchAll",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"lint:watch": "yarn lint --watch",
		"prettier": "prettier --check **/*.js",
		"prettier:fix": "prettier --write **/*.js",
		"prepare": "husky install",
		"jsdoc": "jsdoc -c ./jsdoc.json package.json"
	},
	"devDependencies": {
		"apidoc": "^0.29.0",
